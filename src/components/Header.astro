---
import Navigation from '../components/Navigation.astro';
import { SkipLink } from 'accessible-astro-components';
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/`}>Home</a>
    </li>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/About Us/`}>About Us</a>
    </li>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/About TKD/`}>About TKD</a>
    </li>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/calendar/`}>Calendar</a>
    </li>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/kit/`}>Kit</a>
    </li>
    <li class="menu-item">
      <a href={`${import.meta.env.BASE_URL}/contact/`}>Contact</a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        margin-top: -4px;
        width: 30px;
        height: auto;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
